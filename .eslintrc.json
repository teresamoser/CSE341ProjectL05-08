{
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": ["error", { "endOfLine": "auto" }]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
